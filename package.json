{
  "name": "webtest",
  "version": "0.3.1",
  "description": "Execute browser test in plain English",
  "main": "index.js",
  "bin": {
    "webtest": "./index.js"
  },
  "scripts": {
    "start": "http-server -o -p 8000",
    "test:start": "forever start --silent node_modules/http-server/bin/http-server -p 8000",
    "test:stop": "forever stop --silent node_modules/http-server/bin/http-server",
    "test": "npm-run-all test:start test:webtest test:stop",
    "test:webtest": "node index.js test/test-page.webtest.txt"
  },
  "dependencies": {
    "chromedriver": "^2.24.1",
    "inquirer": "^1.2.1",
    "mustache": "^2.2.1",
    "preferences": "^0.2.1",
    "selenium-webdriver": "^2.53.3",
    "yargs": "^4.8.1"
  },
  "devDependencies": {
    "npm-run-all": "^3.1.0",
    "forever": "^0.15.2",
    "connect": "^3.4.1",
    "http-server": "^0.9.0",
    "jasmine": "^2.4.1",
    "serve-static": "^1.10.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allenhwkim/webtest.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/allenhwkim/webtest/issues"
  },
  "homepage": "https://github.com/allenhwkim/webtest#readme"
}
